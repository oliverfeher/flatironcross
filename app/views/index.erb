<body>
    <header>
        <nav>
            <ul id="nav-bar">
                <a class="nav-link" href="/"><li>home</li></a>
                <a class="nav-link" href="#"><li>about us</li></a>
                <a class="nav-link" href="#"><li>contact</li></a>
